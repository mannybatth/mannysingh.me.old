                %i.fa.fa-phone.fa-fw
                (317) 224-5337
              %li
                %i.fa.fa-envelope-o.fa-fw
                %a{:href => "mailto:likebeats@gmail.com"} likebeats@gmail.com
            %hr.small/
            %ul.list-inline
              %li
                %a{:href => "http://www.twitter.com/likebeats", :target => "_blank"}
                  %i.fa.fa-twitter.fa-fw.fa-3x{:style => "color:#00abdc"}
              %li
                %a{:href => "http://www.linkedin.com/in/likebeats", :target => "_blank"}
                  %i.fa.fa-linkedin-square.fa-fw.fa-3x{:style => "color:#0073b2"}
              %li
                %a{:href => "http://www.github.com/likebeats", :target => "_blank"}
                  %i.fa.fa-github.fa-fw.fa-3x{:style => "color:#1d1d1b"}

    =javascript_include_tag 'jquery', 'bootstrap.min', 'modernizr.custom', 'toucheffects', 'application'

    / Custom Theme JavaScript
    :javascript
      // Closes the sidebar menu
      $("#menu-close").click(function(e) {
          e.preventDefault();
          $("#sidebar-wrapper").toggleClass("active");
      });

      // Opens the sidebar menu
      $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#sidebar-wrapper").toggleClass("active");
      });

      // Scrolls to the selected menu item on the page
      $(function() {
          $('a[href*=#]:not([href=#])').click(function() {
              if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

                  var target = $(this.hash);
                  target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                  if (target.length) {
                      disable_scroll();
                      $('html,body').animate({
                          scrollTop: target.offset().top
                      }, 1000, function() {
                          enable_scroll();
                      });
                      return false;
                  }
              }
          });
      });

