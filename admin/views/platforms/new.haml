%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:platforms, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:platforms, :new)

.tabs-content
  = form_for :platform, url(:platforms, :create), :class => 'form-horizontal' do |f|
    =partial 'platforms/form', :locals => { :f => f }
